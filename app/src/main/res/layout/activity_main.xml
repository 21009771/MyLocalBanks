<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C27B0"
    android:orientation="vertical"
    tools:context=".MainActivity">




    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Different Banks To Choose From:"
        android:textColor="#E4E0E0"
        android:textSize="40dp" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/B1"
        android:layout_marginTop="10dp"
        android:textSize="30dp"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="312dp"
        android:layout_height="147dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@android:string/autofill"
        app:srcCompat="@drawable/download"
        tools:targetApi="o_mr1"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/B2"
        android:layout_marginTop="10dp"
        android:textSize="30dp"/>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:contentDescription="@android:string/autofill"
        app:srcCompat="@drawable/ocbc_bank_logo"
        tools:targetApi="o_mr1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/B3"
        android:layout_marginTop="10dp"
        android:textSize="30dp"/>

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/uob_bank_singapore_branches_and_opening_hours"
        android:contentDescription="@android:string/autofill"
        tools:targetApi="o_mr1" />


</LinearLayout>